<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Get CRUD</title>
</head>
<style>
    .btn-delete {
        background-color: red;
    }

    .btn-edit {
        background-color: orange;
    }
</style>

<body>
    <table border="1">

        <tr>
            <td>email</td>
            <td>Firstname</td>
            <td>Lastname</td>
            <td>Address</td>
            <td>Phonenumber</td>
            <td>gender</td>
            <td>role id</td>
            <td>position</td>

        </tr>
        <% for(let i=0; i < dataTable.length; i++) { %>
            <tr>
                <td>
                    <%= dataTable[i].email %>
                </td>
                <td>
                    <%= dataTable[i].firstName %>
                </td>
                <td>
                    <%= dataTable[i].lastName %>
                </td>
                <td>
                    <%= dataTable[i].address %>
                </td>
                <td>
                    <%= dataTable[i].phoneNumber %>
                </td>

                <td>
                    <%= dataTable[i].gender %>
                </td>
                <td>
                    <%= dataTable[i].roleId %>
                </td>
                <td>
                    <%= dataTable[i].positionId %>
                </td>
                <td>
                    <a href="/edit-crud?id=<%= dataTable[i].id %>" class="btn-edit" type="button">Sua</a>
                </td>
                <td>
                    <a href="/delete-crud?id=<%= dataTable[i].id %>" class="btn-delete" type="button">Xoa</a>
                </td>

            </tr>
            <% } %>
    </table>
</body>

</html>